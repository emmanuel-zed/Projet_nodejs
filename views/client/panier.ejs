<div class="container py-4">
  <h2 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Mon Panier</h2>

  <% if (panierVide) { %>
    <div class="text-center py-5">
      <i class="fas fa-shopping-cart text-muted" style="font-size: 4rem;"></i>
      <h4 class="mt-3 text-muted">Votre panier est vide</h4>
      <p class="text-muted">Explorez nos produits et trouvez des delices a commander !</p>
      <a href="/explorer" class="btn btn-primary btn-lg mt-2">
        <i class="fas fa-search me-2"></i>Explorer les produits
      </a>
    </div>
  <% } else { %>
    <div class="row">
      <div class="col-md-8">
        <% Object.values(articlesParBoutique).forEach(group => { %>
          <div class="card shadow-sm mb-3">
            <div class="card-header bg-light">
              <strong><i class="fas fa-store me-2"></i><%= group.boutique.nom %></strong>
              <span class="text-muted ms-2">
                <i class="fas fa-map-marker-alt me-1"></i><%= group.boutique.localisation.commune %>
              </span>
            </div>
            <div class="card-body">
              <% group.articles.forEach(article => { %>
                <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                  <% if (article.produit.images && article.produit.images.length > 0) { %>
                    <img src="<%= article.produit.images[0] %>" class="rounded me-3"
                      style="width: 80px; height: 80px; object-fit: cover;">
                  <% } else { %>
                    <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center"
                      style="width: 80px; height: 80px;">
                      <i class="fas fa-image text-muted"></i>
                    </div>
                  <% } %>
                  <div class="flex-grow-1">
                    <h6 class="mb-0"><%= article.produit.titre %></h6>
                    <small class="text-muted">Quantite: <%= article.quantite %></small>
                    <% if (article.options) { %>
                      <br><small class="text-muted">Options: <%= article.options %></small>
                    <% } %>
                  </div>
                  <div class="text-end">
                    <strong class="text-primary"><%= article.sousTotal.toLocaleString() %> FCFA</strong>
                    <br>
                    <form action="/panier/supprimer/<%= article.produit._id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-outline-danger btn-sm mt-1">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </div>
                </div>
              <% }); %>
              <div class="text-end">
                <strong>Sous-total : <%= group.sousTotal.toLocaleString() %> FCFA</strong>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5>Resume</h5>
            <hr>
            <div class="d-flex justify-content-between mb-2">
              <span>Sous-total</span>
              <strong><%= total.toLocaleString() %> FCFA</strong>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span>Livraison</span>
              <span class="text-muted">A determiner</span>
            </div>
            <hr>
            <div class="d-flex justify-content-between mb-3">
              <strong class="fs-5">Total</strong>
              <strong class="fs-5 text-primary"><%= total.toLocaleString() %> FCFA</strong>
            </div>
            <a href="/commander" class="btn btn-primary w-100 btn-lg">
              <i class="fas fa-credit-card me-2"></i>Commander
            </a>
            <a href="/explorer" class="btn btn-outline-secondary w-100 mt-2">
              Continuer les achats
            </a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
