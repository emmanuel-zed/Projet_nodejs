<div class="container py-4">
  <h2 class="mb-4"><i class="fas fa-box me-2"></i>Mes commandes</h2>

  <% if (commandes.length === 0) { %>
    <div class="text-center py-5">
      <i class="fas fa-box-open text-muted" style="font-size: 4rem;"></i>
      <h4 class="mt-3 text-muted">Aucune commande</h4>
      <p class="text-muted">Vous n'avez pas encore passe de commande.</p>
      <a href="/explorer" class="btn btn-primary">Explorer les produits</a>
    </div>
  <% } else { %>
    <% commandes.forEach(commande => { %>
      <%
        const statutColors = {
          en_attente: 'warning',
          confirmee: 'info',
          en_preparation: 'primary',
          prete: 'success',
          livree: 'success',
          recuperee: 'success',
          annulee: 'danger'
        };
        const statutLabels = {
          en_attente: 'En attente',
          confirmee: 'Confirmee',
          en_preparation: 'En preparation',
          prete: 'Prete',
          livree: 'Livree',
          recuperee: 'Recuperee',
          annulee: 'Annulee'
        };
      %>
      <div class="card shadow-sm mb-3">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start flex-wrap">
            <div>
              <h5 class="mb-1">
                <a href="/commande/<%= commande._id %>" class="text-decoration-none">
                  #<%= commande.numero %>
                </a>
              </h5>
              <% if (commande.boutique) { %>
                <small class="text-muted"><i class="fas fa-store me-1"></i><%= commande.boutique.nom %></small>
              <% } %>
            </div>
            <span class="badge bg-<%= statutColors[commande.statut] || 'secondary' %>">
              <%= statutLabels[commande.statut] || commande.statut %>
            </span>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-8">
              <% commande.articles.forEach(article => { %>
                <div class="d-flex align-items-center mb-2">
                  <% if (article.produit && article.produit.images && article.produit.images.length > 0) { %>
                    <img src="<%= article.produit.images[0] %>" class="rounded me-2"
                      style="width: 50px; height: 50px; object-fit: cover;">
                  <% } %>
                  <div>
                    <span><%= article.titre %></span>
                    <small class="text-muted d-block">Qty: <%= article.quantite %> - <%= article.sousTotal.toLocaleString() %> FCFA</small>
                  </div>
                </div>
              <% }); %>
            </div>
            <div class="col-md-4 text-md-end">
              <strong class="text-primary fs-5"><%= commande.montantFinal.toLocaleString() %> FCFA</strong>
              <br>
              <small class="text-muted">
                <i class="fas fa-calendar me-1"></i>
                Recuperation: <%= new Date(commande.dateRecuperation).toLocaleDateString('fr-FR') %>
              </small>
              <br>
              <small class="text-muted">
                Commande du <%= new Date(commande.createdAt).toLocaleDateString('fr-FR') %>
              </small>
            </div>
          </div>

          <% if (['livree', 'recuperee'].includes(commande.statut)) { %>
            <hr>
            <button class="btn btn-outline-warning btn-sm" data-bs-toggle="collapse"
              data-bs-target="#avis-<%= commande._id %>">
              <i class="fas fa-star me-1"></i>Laisser un avis
            </button>
            <div class="collapse mt-2" id="avis-<%= commande._id %>">
              <form action="/avis" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="commandeId" value="<%= commande._id %>">
                <div class="mb-2">
                  <label class="form-label">Note</label>
                  <select class="form-select form-select-sm" name="note" required style="width: 150px;">
                    <option value="5">5 - Excellent</option>
                    <option value="4">4 - Tres bien</option>
                    <option value="3">3 - Bien</option>
                    <option value="2">2 - Moyen</option>
                    <option value="1">1 - Mauvais</option>
                  </select>
                </div>
                <div class="mb-2">
                  <textarea class="form-control form-control-sm" name="commentaire" rows="2"
                    placeholder="Votre avis..."></textarea>
                </div>
                <div class="mb-2">
                  <input type="file" class="form-control form-control-sm" name="photos" multiple accept="image/*">
                </div>
                <button type="submit" class="btn btn-warning btn-sm">Envoyer mon avis</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    <% }); %>
  <% } %>
</div>
