<div class="container py-5 text-center">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
      <h2 class="mt-3">Commande confirmee !</h2>
      <p class="text-muted">Merci pour votre commande. Le vendeur va la confirmer sous peu.</p>

      <% commandes.forEach(commande => { %>
        <div class="card shadow-sm mt-4 text-start">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-0">Commande #<%= commande.numero %></h5>
                <small class="text-muted">
                  Recuperation le <%= new Date(commande.dateRecuperation).toLocaleDateString('fr-FR') %>
                  | Mode: <%= commande.modeRecuperation === 'retrait' ? 'Retrait en boutique' : 'Livraison' %>
                </small>
              </div>
              <span class="badge bg-warning text-dark">En attente</span>
            </div>
            <hr>
            <% commande.articles.forEach(article => { %>
              <div class="d-flex justify-content-between">
                <span><%= article.titre %> x<%= article.quantite %></span>
                <span><%= article.sousTotal.toLocaleString() %> FCFA</span>
              </div>
            <% }); %>
            <hr>
            <div class="d-flex justify-content-between fw-bold">
              <span>Total</span>
              <span class="text-primary"><%= commande.montantFinal.toLocaleString() %> FCFA</span>
            </div>
            <small class="text-muted">
              Paiement: <%= commande.paiement.methode.replace('_', ' ') %>
              | Ref: <%= commande.paiement.reference %>
            </small>
          </div>
        </div>
      <% }); %>

      <div class="mt-4">
        <a href="/mes-commandes" class="btn btn-primary btn-lg me-2">
          <i class="fas fa-box me-2"></i>Suivre mes commandes
        </a>
        <a href="/explorer" class="btn btn-outline-primary btn-lg">
          Continuer les achats
        </a>
      </div>
    </div>
  </div>
</div>
